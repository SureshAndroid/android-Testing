<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Name"
        android:id="@+id/label"
        android:layout_alignTop="@+id/cityname"
        android:layout_marginLeft= "30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/cityname"
        android:layout_marginStart="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Population"
        android:id="@+id/label1"
        android:layout_below="@+id/label"
        android:layout_alignLeft="@+id/label"
        android:layout_alignStart="@+id/label"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/population"
        android:layout_alignTop="@+id/label1"
        android:layout_alignLeft="@+id/cityname"
        android:layout_alignStart="@+id/cityname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Langtitute"
        android:id="@+id/label2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/label1"
        android:layout_alignLeft="@+id/label1"
        android:layout_alignStart="@+id/label1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/lng"
        android:layout_alignTop="@+id/label2"
        android:layout_alignLeft="@+id/population"
        android:layout_alignStart="@+id/population" />


</RelativeLayout>
